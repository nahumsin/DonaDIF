<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.nahumsin.donadif.Login">

    <Button
        android:id="@+id/btnCrearCuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear Cuenta"
        android:layout_marginBottom="37dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btnConectFB"
        android:layout_alignStart="@+id/btnConectFB"
        android:layout_alignRight="@+id/btnConectFB"
        android:layout_alignEnd="@+id/btnConectFB" />

    <ImageView
        android:id="@+id/imgViewLogo"
        android:layout_width="150dp"
        android:text="DonaDIF"
        android:textSize="60sp"
        android:textStyle="normal|bold"
        app:srcCompat="@mipmap/dona"
        android:layout_height="120dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txtViewContrasena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ContraseÃ±a"
        android:layout_alignBaseline="@+id/txtContrasena"
        android:layout_alignBottom="@+id/txtContrasena"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txtViewNombreUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuario"
        android:layout_alignBaseline="@+id/txtUsuario"
        android:layout_alignBottom="@+id/txtUsuario"
        android:layout_alignRight="@+id/txtViewContrasena"
        android:layout_alignEnd="@+id/txtViewContrasena" />

    <EditText
        android:id="@+id/txtUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="campo obligatorio"
        android:inputType="textPersonName"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/imgViewLogo"
        android:layout_alignLeft="@+id/imgViewLogo"
        android:layout_alignStart="@+id/imgViewLogo" />

    <EditText
        android:id="@+id/txtContrasena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="**********"
        android:inputType="textPassword"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/txtViewNombreUsuario"
        android:layout_alignLeft="@+id/txtUsuario"
        android:layout_alignStart="@+id/txtUsuario" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/btnConectFB"
        style="@style/com_facebook_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnCrearCuenta"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="43dp" />

</RelativeLayout>
